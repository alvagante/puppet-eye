  process '<%= @name %>' do
    pid_file '<%= @real_pidfile %>'
    start_command '<%= @real_startprogram %>'
    stop_command '<%= @real_stopprogram %>'
<% if @checks && @checks.is_a?(Hash) -%>
<% @checks.each do |name, params| -%>
    check :<%= name %><%= params.sort.map {|k,v| ", :#{k} => #{v.inspect}"}.join %>
<% end -%>
<% end -%>
<% if @triggers && @triggers.is_a(Hash) -%>
<% @triggers.each do |name, params| -%>
    trigger :<%= name %><%= params.sort.map {|k,v| ", :#{k} => #{v.inspect}"}.join %>
<% end -%>
<% end -%>
  end
